<Application x:Class="EZSampler.UI.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EZSampler.UI.Wpf"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Light" />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Wise-inspired beige + lime green palette -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#E8E7E5"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F9F8F6"/>
            <SolidColorBrush x:Key="CardBorderBrush" Color="#D5D4D2"/>
            <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#F5F5F3"/>
            <SolidColorBrush x:Key="AccentGreenBrush" Color="#9FE870"/>
            <SolidColorBrush x:Key="DarkTextBrush" Color="#2E2E2E"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
