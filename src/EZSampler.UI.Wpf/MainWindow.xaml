<Window x:Class="EZSampler.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EZSampler.UI.Wpf"
        xmlns:controls="clr-namespace:EZSampler.UI.Wpf.Controls"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Background="{StaticResource AppBackgroundBrush}"
        MinWidth="820" MinHeight="420"  
        Width="1000" Height="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="EZSAMPLER" 
                           Style="{StaticResource TextBlockHeading1}"
                           Margin="0,0,0,16" />

                <controls:WaveformView Grid.Row="1" Margin="0,0,0,16" x:Name="WaveformView" />

                <controls:TransportControls Grid.Row="2" Margin="0,0,0,12" x:Name="TransportControls" />

                <controls:CaptureStatusPanel Grid.Row="3" x:Name="CaptureStatusPanel" />
            </Grid>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardBorder}">
            <controls:RecordingsPanel x:Name="RecordingsPanel" />
        </Border>
    </Grid>
</Window>
