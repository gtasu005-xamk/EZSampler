<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:System;assembly=mscorlib">
    
    <!-- ====================================================================
         DESIGN TOKENS - CENTRALIZED STYLING SYSTEM
         
         This file defines all design constants used across the application.
         Colors, fonts, spacing, and component styles are defined here to ensure
         consistency and make theming changes easy.
         ==================================================================== -->
    
    <!-- ====================================================================
         COLOR PALETTE (Semantic)
         ==================================================================== -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="ColorPrimary" Color="#E53935"/>
    <SolidColorBrush x:Key="ColorPrimaryHover" Color="#C62828"/>
    <SolidColorBrush x:Key="ColorPrimaryPressed" Color="#B71C1C"/>
    
    <!-- Success Colors -->
    <SolidColorBrush x:Key="ColorSuccess" Color="#9FE870"/>
    <SolidColorBrush x:Key="ColorSuccessHover" Color="#7DCE3E"/>
    
    <!-- Warning Colors -->
    <SolidColorBrush x:Key="ColorWarning" Color="#FFA726"/>
    <SolidColorBrush x:Key="ColorWarningHover" Color="#FB8C00"/>
    
    <!-- Error Colors -->
    <SolidColorBrush x:Key="ColorError" Color="#EF5350"/>
    <SolidColorBrush x:Key="ColorErrorHover" Color="#E53935"/>
    
    <!-- Neutrals (inherited from existing palette) -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#E8E7E5"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F9F8F6"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#D5D4D2"/>
    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#F5F5F3"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="MediumTextBrush" Color="#595959"/>
    <SolidColorBrush x:Key="LightTextBrush" Color="#A0A0A0"/>
    
    <!-- Special Colors -->
    <SolidColorBrush x:Key="ColorPlaybackLine" Color="#E53935"/>
    <SolidColorBrush x:Key="ColorWaveformStroke" Color="#2E2E2E"/>
    
    <!-- ====================================================================
         TYPOGRAPHY
         ==================================================================== -->
    
    <!-- Font Families -->
    <FontFamily x:Key="FontFamilyDefault">Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamilyHeading">./Fonts/#Poppins</FontFamily>
    <FontFamily x:Key="FontFamilyMono">Consolas, Courier New</FontFamily>
    
    <!-- Font Sizes -->
    <s:Double x:Key="FontSizeDisplay">36</s:Double>
    <s:Double x:Key="FontSizeHeading1">30</s:Double>
    <s:Double x:Key="FontSizeHeading2">24</s:Double>
    <s:Double x:Key="FontSizeHeading3">20</s:Double>
    <s:Double x:Key="FontSizeBody">14</s:Double>
    <s:Double x:Key="FontSizeBodySmall">12</s:Double>
    <s:Double x:Key="FontSizeCaption">11</s:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
    <!-- ====================================================================
         SPACING (Margin & Padding)
         ==================================================================== -->
    
    <!-- Single Values -->
    <Thickness x:Key="SpacingXxs">4</Thickness>
    <Thickness x:Key="SpacingXs">6</Thickness>
    <Thickness x:Key="SpacingSmall">8</Thickness>
    <Thickness x:Key="SpacingMedium">12</Thickness>
    <Thickness x:Key="SpacingLarge">16</Thickness>
    <Thickness x:Key="SpacingXl">20</Thickness>
    <Thickness x:Key="SpacingXxl">24</Thickness>
    <Thickness x:Key="SpacingHuge">32</Thickness>
    
    <!-- Common Spacing Patterns -->
    <Thickness x:Key="SpacingStandard">16</Thickness>
    <Thickness x:Key="SpacingCompact">8,4</Thickness>
    <Thickness x:Key="SpacingRelaxed">12,10</Thickness>
    
    <!-- ====================================================================
         BORDER RADIUS (Corner Radius)
         ==================================================================== -->
    
    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXl">12</CornerRadius>
    
    <!-- ====================================================================
         SHADOWS (Drop Shadow Effect)
         ==================================================================== -->
    
    <DropShadowEffect x:Key="ShadowSmall" 
                      Color="#000000" 
                      BlurRadius="4" 
                      ShadowDepth="1" 
                      Opacity="0.1"
                      RenderingBias="Quality"/>
    
    <DropShadowEffect x:Key="ShadowMedium" 
                      Color="#000000" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Opacity="0.15"
                      RenderingBias="Quality"/>
    
    <!-- ====================================================================
         COMPONENT STYLES
         ==================================================================== -->
    
    <!-- Button Base Style -->
    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyDefault}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingCompact}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Focusable" Value="True"/>
    </Style>
    
    <!-- Button Primary (Red/Accent) -->
    <Style x:Key="ButtonPrimary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#D32F2F"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="background"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusSmall}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="background" Property="Background" Value="{StaticResource ColorPrimaryHover}"/>
                            <Setter TargetName="background" Property="BorderBrush" Value="#B71C1C"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="background" Property="Background" Value="{StaticResource ColorPrimaryPressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="background" Property="Background" Value="#E8E7E5"/>
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Button Secondary (Neutral) -->
    <Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource SubtleBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="background"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadiusSmall}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="background" Property="Background" Value="#F0EFED"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="background" Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#D0D0D0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Card/Panel Border (Border styling for card containers) -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusLarge}"/>
        <Setter Property="Padding" Value="{StaticResource SpacingLarge}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect" Value="{StaticResource ShadowMedium}"/>
    </Style>
    
    <!-- ====================================================================
         TEXTBLOCK STYLES
         ==================================================================== -->
    
    <!-- Heading 1 -->
    <Style x:Key="TextBlockHeading1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyHeading}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeDisplay}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
    </Style>
    
    <!-- Heading 2 -->
    <Style x:Key="TextBlockHeading2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyHeading}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading1}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
    </Style>
    
    <!-- Body Text -->
    <Style x:Key="TextBlockBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyDefault}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
    </Style>
    
    <!-- Caption Text -->
    <Style x:Key="TextBlockCaption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyDefault}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}"/>
        <Setter Property="Foreground" Value="{StaticResource MediumTextBrush}"/>
    </Style>
    
    <!-- ====================================================================
         MISC STYLES
         ==================================================================== -->
    
    <!-- Canvas for Waveform -->
    <Style x:Key="WaveformCanvas" TargetType="Canvas">
        <Setter Property="Background" Value="{StaticResource SubtleBackgroundBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    
    <!-- Waveform Path Line -->
    <Style x:Key="WaveformPath" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource ColorWaveformStroke}"/>
        <Setter Property="StrokeThickness" Value="1.5"/>
    </Style>

</ResourceDictionary>