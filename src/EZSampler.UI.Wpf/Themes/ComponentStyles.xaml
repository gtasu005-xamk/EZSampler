<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ====================================================================
         CONTROL TEMPLATES & ADDITIONAL COMPONENT STYLES
         
         This file contains more complex control templates and reusable
         component styles that use the design tokens.
         ==================================================================== -->
    
    <!-- ListView Item Style -->
    <Style x:Key="ListViewItemBase" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
    
    <!-- Text Input Base -->
    <Style x:Key="TextBoxBase" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyDefault}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    
</ResourceDictionary>